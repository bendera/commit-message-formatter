{
  "name": "@bendera/commit-message-formatter",
  "version": "0.7.0",
  "description": "",
  "main": "dist/CommitMessageFormatter.js",
  "types": "dist/CommitMessageFormatter.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bendera/commit-message-formatter.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bendera/commit-message-formatter/issues"
  },
  "homepage": "https://github.com/bendera/commit-message-formatter#readme",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "jest": "^29.5.0",
    "jest-config": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  }
}
